@model PNS_Prototype.Models.Fulfill

@{
    ViewBag.Title = "Scan";
}

<h2>Testing</h2>


@using (Html.BeginForm("Scan", "Order", FormMethod.Get))
{
    <br />
    <p>@Html.Label("scanned", "Scan item here"):</p> @Html.TextBox("scanned", null, new { @class = "form-control", @placeholder = "scan here..", @autofocus = "autofocus" })
    <br />
}

<center><p style="color:forestgreen;">@ViewBag.Added</p></center>

<body>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()



        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)


            <div class="form-group">
                @Html.LabelFor(model => model.ProCode, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.ProCode, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Order, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Order, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Supplied, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Supplied, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @if (Request.UrlReferrer != null)
                    {
                        @*<a class="bottomNav" onclick="location.href = @ViewBag.Back">Back</a><br />
                        <button onclick="location.href = @ViewBag.Back">Back</button>*@

                        <a href="@ViewBag.Back" class="bottomNav">Back</a><br />
                    }
                </div>
            </div>
        </div>
    }
</body>






